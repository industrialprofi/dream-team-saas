# Development environment variables for Dev Container
# Копируйте этот файл в .env.local и настройте под свои нужды

# Database
DATABASE_URL=postgres://postgres:postgres@db:5432/dream_team_saas_development
DATABASE_TEST_URL=postgres://postgres:postgres@db:5432/dream_team_saas_test

# Rails
RAILS_ENV=development
RAILS_LOG_LEVEL=debug
RAILS_SERVE_STATIC_FILES=true

# GoodJob dashboard basic auth (используйте в production, в dev можно не задавать)
# GOOD_JOB_DASHBOARD_USER=admin
# GOOD_JOB_DASHBOARD_PASSWORD=changeme

# Secret keys (генерируйте новые для продакшена)
SECRET_KEY_BASE=development_secret_key_base_replace_in_production

# Devise + OmniAuth Google
# GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
# GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# Внешние API (LLM)
# OPENAI_API_KEY=your_openai_api_key

# Настройки почты для разработки (опционально)
# SMTP_ADDRESS=localhost
# SMTP_PORT=1025
# SMTP_DOMAIN=localhost
# SMTP_USERNAME=
# SMTP_PASSWORD=

# Настройки для отладки
BETTER_ERRORS_INSIDE_FRAME=1
